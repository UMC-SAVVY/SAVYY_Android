<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--앱이 외부 저장소(External Storage)에 있는 파일을 읽기 위해 필요한 권한-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!--앱 인터넷 사용 권한-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SAVVY_Android.Splash"
        tools:targetApi="31">
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.ProfileSettingActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TravelPlanMakeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MemoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PlaceAddActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TravelPlanViewActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TravelPlanModifyActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MemoModifyActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DiaryViewActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DiaryStep1Activity"
            android:exported="false" />
        <activity
            android:name=".activity.DiaryStep2Activity"
            android:exported="false" />
        <activity
            android:name=".activity.DiaryStep3Activity"
            android:exported="false" />
        <activity
            android:name=".activity.DiaryStep4Activity"
            android:exported="false" />

    </application>

</manifest>