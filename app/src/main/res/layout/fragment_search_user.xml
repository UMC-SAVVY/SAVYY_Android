<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utils.search.SearchUserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_user_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_user_search_ic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/search_user_edit"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:background="@null"
            android:fontFamily="@font/pretendard_medium"
            android:hint="@string/plz_enter_search"
            android:importantForAutofill="no"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/icon"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/search_user_search_ic"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search_user_btn"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_radius6"
            android:backgroundTint="@color/button_line"
            android:enabled="false"
            android:fontFamily="@font/pretendard_semi_bold"
            android:gravity="center"
            android:outlineProvider="none"
            android:paddingHorizontal="5dp"
            android:text="검색"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_notice_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_user_top">

        <ImageView
            android:id="@+id/search_user_content_ic"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_content_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_user_notice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="최근 검색어는 최대 10개까지 저장됩니다"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_user_content_ic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_user_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="전체 삭제"
            android:textColor="#009ADC"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_record_user_recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:clipToPadding="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_notice_user"
        tools:listitem="@layout/item_search_user" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result_user_recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:clipToPadding="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_notice_user"
        tools:listitem="@layout/item_search_user" />

</androidx.constraintlayout.widget.ConstraintLayout>