<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ic_line"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/travel_plan_view_place_check2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_line">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/border_circle_gray"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/border_circle_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/checkmark_gray"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_checkmark_gray"
                app:layout_constraintBottom_toBottomOf="@+id/border_circle_gray"
                app:layout_constraintEnd_toEndOf="@+id/border_circle_gray"
                app:layout_constraintStart_toStartOf="@+id/border_circle_gray"
                app:layout_constraintTop_toTopOf="@+id/border_circle_gray" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/travel_plan_view_checklist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="계획"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>